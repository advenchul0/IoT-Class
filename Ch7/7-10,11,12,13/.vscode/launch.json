    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch JS files without HTML",
            "program": "${workspaceFolder}/7-10,11,12,13.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],    
            "type": "node"
        },

        {
            "name": "Launch Chrome JS files with HTML",
            "file":"${workspaceFolder}/index.html",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ], 
            "type": "chrome"
        }
    ]
}
